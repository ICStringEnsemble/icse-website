{% extends 'form_div_layout.html.twig' %}

{% block field_row %}
{% spaceless %}
    <div class="field_row">
      {{ form_label(form) }}
      <div class="field_row_main">
        {{ form_errors(form) }}
        {{ form_widget(form) }} 
      </div>
    </div>
{% endspaceless %}
{% endblock field_row %} 

{% block choice_widget_expanded %}
{% spaceless %} 
<div class="choices_list">
    <div {{ block('widget_container_attributes') }}>
    {% for child in form %}
        {{ form_widget(child) }}
        {{ form_label(child) }}
    {% endfor %}
    {% if extra_list_item is defined %}{{ extra_list_item }}{% endif %}
    </div>
</div>
{% endspaceless %} 
{% endblock choice_widget_expanded %}

