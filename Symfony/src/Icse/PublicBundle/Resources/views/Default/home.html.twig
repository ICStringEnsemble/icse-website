{% extends 'IcsePublicBundle:Default:template.html.twig' %}
{% set currentPage = 'home' %}

{% block title %} - Home{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/icsepublic/css/home.css') }}" />
{% endblock %} 

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('bundles/icsepublic/js/jquery.cycle.all.js') }}"></script> 
{% endblock %} 

{% block content %}

<div id=col_left>
  {% autoescape false %} 
  {{ home_intro }}
  {% endautoescape %}

  {% for event_group in [{label:"Today", events:today_events},
                         {label:"Tomorrow", events:tomorrow_events},
                         {label:"This Week", events:thisweek_events},
                         {label:"Next Week", events:nextweek_events},
                         {label:((today_events or tomorrow_events or thisweek_events or nextweek_events)
                               ?"Other Upcoming Events":"Upcoming Events"), events:future_events},
                         {label:"Previous Events", events:past_events}] %}
    {% if event_group.events %}
      <h2>{{ event_group.label }}</h2>
      {% for event in event_group.events %}
        <h3>{{ event.getName() }}</h3>
        <p>{{ event.getStartsAt() | date("l jS F Y g:ia") }}</p>
      {% endfor %}
    {% endif %}
  {% endfor %}

</div>

<div id=col_right>
  <div id=slideshow >
    {% for image in slideshow_images %}
    <img width=334px height=254px src="{{ path('IcsePublicBundle_resource', {'type':'images', 'file':image.getFile(), 'size':'homepageslideshow'}) }}"/>
    {% endfor %}
  </div>
  <script>
    $('#slideshow').cycle({ 
        fx:     'fadeout', 
        random:  1 
    }); 
  </script>



  <h2>Next Rehearsal</h2>
  <ul>
    <li>Friday 31st February 2012</li>
    <li>in the Great Hall</li>
  </ul>

  <h2>News</h2>
  <img id="news_pic" src="http://Placekitten.com/64/70"/>
  <h3>Lorem Ipsum</h3>
  <p>Lorem ipsum dolor sit amet, consetetur sadipscing elitr</p>

  <h2>Twitter</h2>

  <a class="twitter-timeline" href="https://twitter.com/ICStrings" data-widget-id="248604844275929088">Tweets by @ICStrings</a>
  <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
 
</div>

{% endblock %}
