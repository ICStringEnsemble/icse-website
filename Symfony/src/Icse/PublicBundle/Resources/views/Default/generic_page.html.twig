{% extends 'IcsePublicBundle:Default:template.html.twig' %}
{% set currentSection = pageId %}

{% block content %}

{{ pageBody | raw}}

{% if reloadPeriod is defined %}
<script>
$(document).ready(function(){ 
  setTimeout(function(){
    {% if reloadPath is defined %}
        window.location.href = "{{ reloadPath }}";
    {% else %}
        window.top.location.reload(true);
    {% endif %}
}, {{ reloadPeriod }});
});
</script>
{% endif %}

{% endblock %}
